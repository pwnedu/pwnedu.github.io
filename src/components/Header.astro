---
import ThemeToggler from "@components/ThemeToggler.svelte";
import Title from "@components/Title.svelte";
---

<header
    class="flex items-center p-4 shadow-2xl shadow-secondary/10 sticky top-0 z-50 bg-main"
>
    <div class="flex items-center justify-between w-full mx-auto max-w-7xl">
        <a href="/"
            ><Title
                title="Pwnedu"
                class="px-4 font-mono text-2xl font-bold cursor-pointer hover:bg-accent hover:text-accent-invert"
                client:load
                delay={10000000}
            /></a
        >

        <nav>
            <ul class="flex items-center gap-4">
                <li class="font-mono">
                    <a href="/snippets" class="hover:underline">/Snippets</a>
                </li>

                <li><ThemeToggler client:load /></li>
            </ul>
        </nav>
    </div>
</header>
